{
    <h2 class="text-danger fw-bold"> Page loading.....</h2>
}


else
{
    <a href="/PaymentCuongClas/PaymentCuongClaForm" class="btn btn-success"> Create</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
